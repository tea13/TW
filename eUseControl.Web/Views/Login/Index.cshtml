@model eUseControl.Web.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Web.Optimization

<div class="container-fluid">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 justify-content-center">
            @Html.ValidationSummary(true)
            @Html.ValidationMessageFor(m => m.Credential)
            @Html.ValidationMessageFor(m => m.Password)
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Credential, new
               {
                   placeholder = "example@gmail.com",
                   title = "Please enter your username",
                   name = "username",
                   value = "",
                   id = "username",
                   @class = "form-control"
               })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Password, new
               {
                   placeholder = "*********",
                   type = "password",
                   title = "Please enter your password",
                   value = "",
                   name = "password",
                   id = "password",
                   @class = "form-control"
               })
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary ">Submit</button>
                </div>
            }
        </div>
        <div class="col-4"></div>
    </div>
</div>